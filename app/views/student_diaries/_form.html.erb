<div class="row">
  <div class="col-sm-6">

    <p><%= link_to "Voltar", @student_diary.diary, class: "btn btn-primary" %></p>

    <%= form_for @student_diary do |f| %>

        <%=hidden_field_tag 'student_diary[diary_id]', @student_diary.diary.id%>
        <%=hidden_field_tag 'student_diary[student_id]', @student_diary.student.id%>

        <div class="form-group">
          <%= f.label :value_amount_f %>
          <div class="row">
            <div class="col-sm-6">
              <%= f.number_field :value_amount_f, class: "form-control" %>
            </div>
          </div>
        </div>

        <div class="form-group">
          <%= f.label :value_amount_c %>
          <div class="row">
            <div class="col-sm-6">
              <%= f.number_field :value_amount_c, class: "form-control" %>
            </div>
          </div>
        </div>

        <div class="form-group">
          <%= f.label :average %>
          <div class="row">
            <div class="col-sm-6">
              <%= f.number_field :average, class: "form-control" %>
            </div>
          </div>
        </div>

        <div class="form-group">
          <%= f.label :behavior %>
          <div class="row">
            <div class="col-sm-6">
              <%= f.text_field :behavior, class: "form-control" %>
            </div>
          </div>
        </div>

        <div class="form-group">
          <%= f.label :application %>
          <div class="row">
            <div class="col-sm-6">
              <%= f.text_field :application, class: "form-control" %>
            </div>
          </div>
        </div>

        <div class="form-group">
          <%= f.label :absence %>
          <div class="row">
            <div class="col-sm-6">
              <%= f.number_field :absence, class: "form-control" %>
            </div>
          </div>
        </div>

        <div class="form-group">
          <%= f.label :book_observation_id %>
          <div class="row">
            <div class="col-sm-6">
              <%= f.collection_select :book_observation_id, @observations, :id, :name, class: "form-control", :include_blank => true %>
            </div>
          </div>
        </div>

        <div class="form-group">
          <%= f.submit "Salvar", class: "btn btn-success" %>
        </div>

    <% end %>

  </div>
</div>
