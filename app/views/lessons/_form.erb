<div class="row">

  <div class="col-sm-6">
    <p><%= link_to "Voltar", lessons_path, class: "btn btn-primary" %></p>

    <%= form_for @lesson do |f| %>

        <div class="form-group">
          <%= f.label :name %>
          <div class="row">
            <div class="col-sm-6">
              <%= f.text_field :name, class: "form-control" %>
            </div>
          </div>
        </div>

        <div class="form-group">
          <%= f.submit "Salvar", class: "btn btn-success" %>
        </div>

    <% end %>

  </div>
</div>
