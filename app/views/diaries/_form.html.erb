<div class="row">
  <div class="col-sm-6">

    <p><%= link_to "Voltar", books_path, class: "btn btn-primary" %></p>

    <%= form_for @diary do |f| %>

        <div class="form-group">
          <%= f.label :year %>
          <div class="row">
            <div class="col-sm-6">
              <%= f.collection_select :year_id, @years, :id, :name, class: "form-control" %>
            </div>
          </div>
        </div>

        <div class="form-group">
          <%= f.label :discipline %>
          <div class="row">
            <div class="col-sm-6">
              <%= f.collection_select :discipline_id, @disciplines, :id, :name, class: "form-control" %>
            </div>
          </div>
        </div>

        <div class="form-group">
          <%= f.label :professor %>
          <div class="row">
            <div class="col-sm-6">
              <%= f.collection_select :servant_id, @servants, :id, :name, class: "form-control" %>
            </div>
          </div>
        </div>

        <div class="form-group">
          <%= f.label :students %>
          <div class="row">
            <div class="col-sm-6">
              <%=hidden_field_tag 'diary[student_ids][]'%>
              <% @students.each do |student| %>
                  <p>
                    <%= check_box_tag "diary[student_ids][]", student.id, @diary.students.include?(student) %>
                    <%= student.name %>
                  </p>
              <% end %>
            </div>
          </div>
        </div>

        <div class="form-group">
          <%= f.submit "Salvar", class: "btn btn-success" %>
        </div>

    <% end %>

  </div>
</div>
