<%= form_for @student_book, :url => { :action => "change_students_obs" } do |f|%>
    <%= f.hidden_field :student_id %>
    <%= f.hidden_field :book_id %>
    <div class="form-group">
      <%= f.label :book_observation_id %>
      <div class="row">
        <div class="col-sm-6">
          <%= f.collection_select :book_observation_id, BookObservation.all, :id, :name, class: "form-control", :include_blank => true %>
        </div>
      </div>
    </div>

    <div class="form-group">
      <%= f.submit "Salvar", class: "btn btn-success" %>
    </div>
<% end %>

