<div class="row">
  <div class="col-sm-6">

    <p><%= link_to "Voltar", books_path, class: "btn btn-primary" %></p>

    <%= form_for @book do |f| %>

        <div class="form-group">
          <%= f.label :yearbook %>
          <div class="row">
            <div class="col-sm-6">
              <%= f.text_field :yearbook, class: "form-control" %>
            </div>
          </div>
        </div>

        <div class="form-group">
          <%= f.label :turn %>
          <div class="row">
            <div class="col-sm-6">
              <%= f.text_field :turn, class: "form-control" %>
            </div>
          </div>
        </div>

        <div class="form-group">
          <%= f.label :classname %>
          <div class="row">
            <div class="col-sm-6">
              <%= f.text_field :classname, class: "form-control" %>
            </div>
          </div>
        </div>

        <div class="form-group">
          <%= f.label :workshop_id %>
          <div class="row">
            <div class="col-sm-6">
              <%= f.collection_select :workshop_id, @workshops, :id, :name, class: "form-control" %>
            </div>
          </div>
        </div>

        <div class="form-group">
          <%= f.label :lesson_id %>
          <div class="row">
            <div class="col-sm-6">
              <%= f.collection_select :lesson_id, @lessons, :id, :name, class: "form-control" %>
            </div>
          </div>
        </div>

        <div class="form-group">
          <%= f.label :year_id %>
          <div class="row">
            <div class="col-sm-6">
              <%= f.collection_select :year_id, @years, :id, :name, class: "form-control" %>
            </div>
          </div>
        </div>

        <div class="form-group">
          <%= f.label :student_ids %>
          <div class="row">
            <div class="col-sm-6">
              <%= f.collection_check_boxes :student_ids, @students, :id, :name, {:item_wrapper_class => 'checkbox_container'}, class: "form-control" %>
            </div>
          </div>
        </div>

        <div class="form-group">
          <%= f.submit "Salvar", class: "btn btn-success" %>
        </div>

    <% end %>

  </div>
</div>
