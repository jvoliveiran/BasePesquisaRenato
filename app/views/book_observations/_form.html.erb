<div class="row">

  <div class="col-sm-6">
    <p><%= link_to "Voltar", book_observations_path, class: "btn btn-primary" %></p>

    <%= form_for @observation do |p| %>

        <div class="form-group">
          <%= p.label :name %>
          <div class="row">
            <div class="col-sm-6">
              <%= p.text_field :name, class: "form-control" %>
            </div>
          </div>
        </div>

        <div class="form-group">
          <%= p.submit "Salvar", class: "btn btn-success" %>
        </div>

    <% end %>

  </div>
</div>
