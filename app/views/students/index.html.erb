<h1>Alunos <small>Lista</small></h1>
<p><%= link_to "Novo Aluno", new_student_path, class: "btn btn-primary" %></p>

<table class="table table-striped">
  <tr>
    <th>ID</th>
    <th>Nome</th>
    <th>Idade</th>
    <th>Logradouro</th>
    <th>Created At</th>
    <th>Ver Mais</th>
    <th>Editar</th>
  </tr>

  <% @students.each do |student| %>
      <tr>
        <td><%= student.id %></td>
        <td><%= student.name %></td>
        <td><%= student.age %></td>
        <td><%= student.neighborhood %></td>
        <td><%= time_ago_in_words(student.created_at) %></td>
        <td><%= link_to "Detalhes", student_path(student), class: "btn btn-default" %></td>
        <td><%= link_to "Editar", edit_student_path(student), class: "btn btn-default" %></td>
      </tr>
  <% end %>
</table>